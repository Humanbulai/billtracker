    <script>
        /**
         * Bills Tracker Pro - Enhanced Bill Management Application
         * Features: Analytics, Calendar, Partial Payments, Tags, Keyboard Shortcuts, etc.
         */

        // ============================================
        // CONFIGURATION & CONSTANTS
        // ============================================
        const CONFIG = {
            STORAGE_KEYS: {
                BILLS: 'billsTrackerPro_bills',
                RECURRING: 'billsTrackerPro_recurring',
                SETTINGS: 'billsTrackerPro_settings',
                THEME: 'billsTrackerPro_theme',
                STREAK: 'billsTrackerPro_streak'
            },
            CATEGORIES: {
                utilities: { name: 'Utilities', icon: 'üîå', color: '#f59e0b' },
                housing: { name: 'Housing', icon: 'üè†', color: '#8b5cf6' },
                insurance: { name: 'Insurance', icon: 'üõ°Ô∏è', color: '#06b6d4' },
                subscriptions: { name: 'Subscriptions', icon: 'üì∫', color: '#ec4899' },
                transportation: { name: 'Transportation', icon: 'üöó', color: '#10b981' },
                healthcare: { name: 'Healthcare', icon: 'üè•', color: '#ef4444' },
                education: { name: 'Education', icon: 'üìö', color: '#3b82f6' },
                food: { name: 'Food & Dining', icon: 'üçî', color: '#f97316' },
                entertainment: { name: 'Entertainment', icon: 'üéÆ', color: '#a855f7' },
                other: { name: 'Other', icon: 'üì¶', color: '#64748b' }
            },
            TEMPLATES: {
                electricity: { name: 'Electricity', category: 'utilities', icon: 'üí°' },
                water: { name: 'Water', category: 'utilities', icon: 'üíß' },
                internet: { name: 'Internet', category: 'utilities', icon: 'üåê' },
                rent: { name: 'Rent', category: 'housing', icon: 'üè†' },
                phone: { name: 'Phone', category: 'utilities', icon: 'üì±' },
                insurance: { name: 'Insurance', category: 'insurance', icon: 'üõ°Ô∏è' },
                streaming: { name: 'Streaming', category: 'subscriptions', icon: 'üì∫' },
                gym: { name: 'Gym Membership', category: 'healthcare', icon: 'üèãÔ∏è' }
            },
            FREQUENCIES: {
                weekly: { label: 'Weekly', days: 7 },
                biweekly: { label: 'Bi-weekly', days: 14 },
                monthly: { label: 'Monthly', days: 30 },
                quarterly: { label: 'Quarterly', days: 90 },
                yearly: { label: 'Yearly', days: 365 }
            }
        };

        // ============================================
        // UTILITY FUNCTIONS
        // ============================================
        const Utils = {
            generateId() {
                return 'xxxx-xxxx-xxxx'.replace(/x/g, () => 
                    Math.floor(Math.random() * 16).toString(16)
                );
            },

            sanitize(str) {
                if (!str) return '';
                const div = document.createElement('div');
                div.textContent = str;
                return div.innerHTML;
            },

            formatDate(dateStr) {
                return new Date(dateStr).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                });
            },

            formatCurrency(amount) {
                const symbol = App?.settings?.currency || '$';
                return `${symbol}${parseFloat(amount).toFixed(2)}`;
            },

            isOverdue(dateStr) {
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                const due = new Date(dateStr);
                due.setHours(0, 0, 0, 0);
                return due < today;
            },

            isDueSoon(dateStr, days = 3) {
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                const due = new Date(dateStr);
                due.setHours(0, 0, 0, 0);
                const diff = Math.ceil((due - today) / (1000 * 60 * 60 * 24));
                return diff >= 0 && diff <= days;
            },

            debounce(func, wait) {
                let timeout;
                return (...args) => {
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func(...args), wait);
                };
            },

            getDaysInMonth(year, month) {
                return new Date(year, month + 1, 0).getDate();
            },

            getMonthName(month) {
                return new Date(2000, month).toLocaleDateString('en-US', { month: 'long' });
            }
        };

        // ============================================
        // TOAST NOTIFICATION SYSTEM
        // ============================================
        const Toast = {
            container: document.getElementById('toastContainer'),

            show(message, type = 'info', action = null) {
                const toast = document.createElement('div');
                toast.className = `toast ${type}`;
                
                const icons = {
                    success: '‚úÖ',
                    warning: '‚ö†Ô∏è',
                    error: '‚ùå',
                    info: '‚ÑπÔ∏è'
                };

                toast.innerHTML = `
                    <span class="toast-icon">${icons[type]}</span>
                    <div class="toast-content">
                        <span class="toast-message">${Utils.sanitize(message)}</span>
                        ${action ? `<span class="toast-action" data-action="${action.id}">${action.label}</span>` : ''}
                    </div>
                    <button class="toast-close">&times;</button>
                `;

                if (action) {
                    toast.querySelector('.toast-action').addEventListener('click', action.callback);
                }

                toast.querySelector('.toast-close').addEventListener('click', () => this.dismiss(toast));

                this.container.appendChild(toast);
                setTimeout(() => this.dismiss(toast), 5000);
            },

            dismiss(toast) {
                if (toast && toast.parentNode) {
                    toast.style.opacity = '0';
                    toast.style.transform = 'translateX(100%)';
                    setTimeout(() => toast.remove(), 300);
                }
            },

            success(msg, action) { this.show(msg, 'success', action); },
            warning(msg, action) { this.show(msg, 'warning', action); },
            error(msg, action) { this.show(msg, 'error', action); },
            info(msg, action) { this.show(msg, 'info', action); }
        };

        // ============================================
        // UNDO SYSTEM
        // ============================================
        const UndoSystem = {
            stack: [],
            bar: document.getElementById('undoBar'),
            text: document.getElementById('undoText'),
            timeout: null,

            push(action) {
                this.stack.push(action);
                this.text.textContent = action.message;
                this.bar.classList.add('show');
                
                clearTimeout(this.timeout);
                this.timeout = setTimeout(() => this.clear(), 8000);
            },

            undo() {
                const action = this.stack.pop();
                if (action && action.undo) {
                    action.undo();
                    Toast.success('Action undone');
                }
                this.clear();
            },

            clear() {
                this.bar.classList.remove('show');
                clearTimeout(this.timeout);
            }
        };

        document.getElementById('undoBtn').addEventListener('click', () => UndoSystem.undo());

        // ============================================
        // MAIN APPLICATION
        // ============================================
        const App = {
            bills: [],
            recurringBills: [],
            settings: {
                currency: '$',
                reminderDays: 3,
                monthlyBudget: 0,
                browserNotifications: false
            },
            streak: {
                current: 0,
                best: 0,
                lastPayment: null
            },
            currentFilter: 'all',
            currentSort: 'dueDate-asc',
            searchQuery: '',
            tags: [],
            currentCalendarDate: new Date(),

            // ----------------------------------------
            // INITIALIZATION
            // ----------------------------------------
            init() {
                this.loadData();
                this.loadSettings();
                this.loadTheme();
                this.loadStreak();
                this.generateRecurringBills();
                this.bindEvents();
                this.render();
                this.checkReminders();
                this.requestNotificationPermission();
                
                console.log('Bills Tracker Pro initialized');
            },

            loadData() {
                try {
                    const bills = localStorage.getItem(CONFIG.STORAGE_KEYS.BILLS);
                    const recurring = localStorage.getItem(CONFIG.STORAGE_KEYS.RECURRING);
                    
                    this.bills = bills ? JSON.parse(bills) : [];
                    this.recurringBills = recurring ? JSON.parse(recurring) : [];
                    
                    if (!Array.isArray(this.bills)) this.bills = [];
                    if (!Array.isArray(this.recurringBills)) this.recurringBills = [];
                } catch (e) {
                    console.error('Error loading data:', e);
                    this.bills = [];
                    this.recurringBills = [];
                }
            },

            loadSettings() {
                try {
                    const settings = localStorage.getItem(CONFIG.STORAGE_KEYS.SETTINGS);
                    if (settings) {
                        this.settings = { ...this.settings, ...JSON.parse(settings) };
                    }
                    this.applySettingsToUI();
                } catch (e) {
                    console.error('Error loading settings:', e);
                }
            },

            loadTheme() {
                const theme = localStorage.getItem(CONFIG.STORAGE_KEYS.THEME);
                if (theme === 'dark') {
                    document.documentElement.setAttribute('data-theme', 'dark');
                    document.getElementById('themeBtn').textContent = '‚òÄÔ∏è';
                    document.getElementById('darkModeToggle').classList.add('active');
                }
            },

            loadStreak() {
                try {
                    const streak = localStorage.getItem(CONFIG.STORAGE_KEYS.STREAK);
                    if (streak) {
                        this.streak = JSON.parse(streak);
                    }
                    this.updateStreakDisplay();
                } catch (e) {
                    console.error('Error loading streak:', e);
                }
            },

            saveData() {
                try {
                    localStorage.setItem(CONFIG.STORAGE_KEYS.BILLS, JSON.stringify(this.bills));
                    localStorage.setItem(CONFIG.STORAGE_KEYS.RECURRING, JSON.stringify(this.recurringBills));
                } catch (e) {
                    console.error('Error saving data:', e);
                    Toast.error('Failed to save data');
                }
            },

            saveSettings() {
                try {
                    localStorage.setItem(CONFIG.STORAGE_KEYS.SETTINGS, JSON.stringify(this.settings));
                } catch (e) {
                    console.error('Error saving settings:', e);
                }
            },

            saveStreak() {
                try {
                    localStorage.setItem(CONFIG.STORAGE_KEYS.STREAK, JSON.stringify(this.streak));
                } catch (e) {
                    console.error('Error saving streak:', e);
                }
            },

            applySettingsToUI() {
                const currencySelect = document.getElementById('currencySelect');
                const reminderDays = document.getElementById('defaultReminderDays');
                const budgetInput = document.getElementById('monthlyBudget');

                if (currencySelect) currencySelect.value = this.settings.currency;
                if (reminderDays) reminderDays.value = this.settings.reminderDays;
                if (budgetInput) budgetInput.value = this.settings.monthlyBudget || '';
            },

            // ----------------------------------------
            // EVENT BINDINGS
            // ----------------------------------------
            bindEvents() {
                // Tab navigation
                document.querySelectorAll('.nav-tab').forEach(tab => {
                    tab.addEventListener('click', () => this.switchTab(tab.dataset.tab));
                });

                // Bill form
                document.getElementById('billForm')?.addEventListener('submit', (e) => this.handleAddBill(e));
                document.getElementById('resetFormBtn')?.addEventListener('click', () => this.resetForm());

                // Recurring toggle
                document.getElementById('recurringToggle')?.addEventListener('click', function() {
                    this.classList.toggle('active');
                    document.getElementById('recurringOptions').classList.toggle('show', this.classList.contains('active'));
                });

                // Reminder toggle
                document.getElementById('reminderToggle')?.addEventListener('click', function() {
                    this.classList.toggle('active');
                    document.getElementById('reminderOptions').classList.toggle('show', this.classList.contains('active'));
                });

                // Search
                document.getElementById('searchInput')?.addEventListener('input', 
                    Utils.debounce((e) => {
                        this.searchQuery = e.target.value.toLowerCase();
                        this.renderBills();
                    }, 300)
                );

                // Filter chips
                document.querySelectorAll('.filter-chip').forEach(chip => {
                    chip.addEventListener('click', () => {
                        document.querySelectorAll('.filter-chip').forEach(c => c.classList.remove('active'));
                        chip.classList.add('active');
                        this.currentFilter = chip.dataset.filter;
                        this.renderBills();
                    });
                });

                // Sort
                document.getElementById('sortSelect')?.addEventListener('change', (e) => {
                    this.currentSort = e.target.value;
                    this.renderBills();
                });

                // Quick actions
                document.getElementById('quickAddBtn')?.addEventListener('click', () => this.switchTab('add'));
                document.getElementById('markAllPaidBtn')?.addEventListener('click', () => this.markAllPaid());
                document.getElementById('reminderBtn')?.addEventListener('click', () => this.showReminders());
                document.getElementById('addRecurringBtn')?.addEventListener('click', () => {
                    this.switchTab('add');
                    document.getElementById('recurringToggle').classList.add('active');
                    document.getElementById('recurringOptions').classList.add('show');
                });

                // Templates
                document.querySelectorAll('.template-card').forEach(card => {
                    card.addEventListener('click', () => this.applyTemplate(card.dataset.template));
                });

                // Tags input
                this.initTagsInput();

                // Header buttons
                document.getElementById('themeBtn')?.addEventListener('click', () => this.toggleTheme());
                document.getElementById('exportBtn')?.addEventListener('click', () => this.exportData());
                document.getElementById('shortcutsBtn')?.addEventListener('click', () => this.openModal('shortcutsModal'));

                // Calendar navigation
                document.getElementById('prevMonth')?.addEventListener('click', () => this.navigateCalendar(-1));
                document.getElementById('nextMonth')?.addEventListener('click', () => this.navigateCalendar(1));
                document.getElementById('todayBtn')?.addEventListener('click', () => {
                    this.currentCalendarDate = new Date();
                    this.renderCalendar();
                });

                // Settings
                document.getElementById('currencySelect')?.addEventListener('change', (e) => {
                    this.settings.currency = e.target.value;
                    this.saveSettings();
                    this.render();
                    Toast.success('Currency updated');
                });

                document.getElementById('defaultReminderDays')?.addEventListener('change', (e) => {
                    this.settings.reminderDays = parseInt(e.target.value);
                    this.saveSettings();
                    Toast.success('Settings saved');
                });

                document.getElementById('monthlyBudget')?.addEventListener('change', (e) => {
                    this.settings.monthlyBudget = parseFloat(e.target.value) || 0;
                    this.saveSettings();
                    this.renderAnalytics();
                    Toast.success('Budget updated');
                });

                document.getElementById('darkModeToggle')?.addEventListener('click', () => this.toggleTheme());

                document.getElementById('browserNotifToggle')?.addEventListener('click', function() {
                    this.classList.toggle('active');
                    App.settings.browserNotifications = this.classList.contains('active');
                    App.saveSettings();
                    if (App.settings.browserNotifications) {
                        App.requestNotificationPermission();
                    }
                });

                document.getElementById('exportDataBtn')?.addEventListener('click', () => this.exportData());
                document.getElementById('importFileInput')?.addEventListener('change', (e) => this.importData(e));
                document.getElementById('clearDataBtn')?.addEventListener('click', () => this.clearAllData());

                // Modals
                document.getElementById('closeEditModal')?.addEventListener('click', () => this.closeModal('editModal'));
                document.getElementById('cancelEditBtn')?.addEventListener('click', () => this.closeModal('editModal'));
                document.getElementById('saveEditBtn')?.addEventListener('click', () => this.saveEdit());

                document.getElementById('closePaymentModal')?.addEventListener('click', () => this.closeModal('paymentModal'));
                document.getElementById('cancelPaymentBtn')?.addEventListener('click', () => this.closeModal('paymentModal'));
                document.getElementById('confirmPaymentBtn')?.addEventListener('click', () => this.confirmPayment());
                document.getElementById('payHalfBtn')?.addEventListener('click', () => this.setPaymentAmount(0.5));
                document.getElementById('payFullBtn')?.addEventListener('click', () => this.setPaymentAmount(1));

                document.getElementById('closeShortcutsModal')?.addEventListener('click', () => this.closeModal('shortcutsModal'));
                document.getElementById('closeDayBillsModal')?.addEventListener('click', () => this.closeModal('dayBillsModal'));

                // Close modals on backdrop click
                document.querySelectorAll('.modal-backdrop').forEach(modal => {
                    modal.addEventListener('click', (e) => {
                        if (e.target === modal) this.closeModal(modal.id);
                    });
                });

                // Keyboard shortcuts
                document.addEventListener('keydown', (e) => this.handleKeyboardShortcuts(e));
            },

            // ----------------------------------------
            // TAGS INPUT
            // ----------------------------------------
            initTagsInput() {
                const wrapper = document.getElementById('tagsWrapper');
                const input = document.getElementById('tagsInput');
                
                if (!wrapper || !input) return;

                input.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' && input.value.trim()) {
                        e.preventDefault();
                        this.addTag(input.value.trim());
                        input.value = '';
                    } else if (e.key === 'Backspace' && !input.value && this.tags.length) {
                        this.removeTag(this.tags.length - 1);
                    }
                });

                wrapper.addEventListener('click', () => input.focus());
            },

            addTag(tag) {
                if (this.tags.length >= 5) {
                    Toast.warning('Maximum 5 tags allowed');
                    return;
                }
                if (this.tags.includes(tag)) {
                    Toast.warning('Tag already exists');
                    return;
                }
                this.tags.push(tag);
                this.renderTags();
            },

            removeTag(index) {
                this.tags.splice(index, 1);
                this.renderTags();
            },

            renderTags() {
                const wrapper = document.getElementById('tagsWrapper');
                const input = document.getElementById('tagsInput');
                if (!wrapper) return;

                // Remove existing tags
                wrapper.querySelectorAll('.tag-item').forEach(t => t.remove());

                // Add tags before input
                this.tags.forEach((tag, index) => {
                    const tagEl = document.createElement('span');
                    tagEl.className = 'tag-item';
                    tagEl.innerHTML = `
                        ${Utils.sanitize(tag)}
                        <span class="remove-tag" data-index="${index}">&times;</span>
                    `;
                    tagEl.querySelector('.remove-tag').addEventListener('click', () => this.removeTag(index));
                    wrapper.insertBefore(tagEl, input);
                });
            },

            // ----------------------------------------
            // TAB MANAGEMENT
            // ----------------------------------------
            switchTab(tabName) {
                document.querySelectorAll('.nav-tab').forEach(tab => {
                    tab.classList.toggle('active', tab.dataset.tab === tabName);
                });

                document.querySelectorAll('.tab-panel').forEach(panel => {
                    panel.classList.remove('active');
                });

                const panel = document.getElementById(`${tabName}Panel`);
                if (panel) {
                    panel.classList.add('active');
                    
                    // Render specific tab content
                    if (tabName === 'calendar') this.renderCalendar();
                    if (tabName === 'analytics') this.renderAnalytics();
                }
            },

            // ----------------------------------------
            // BILL OPERATIONS
            // ----------------------------------------
            handleAddBill(e) {
                e.preventDefault();

                const name = document.getElementById('billName').value.trim();
                const amount = parseFloat(document.getElementById('billAmount').value);
                const dueDate = document.getElementById('billDueDate').value;
                const category = document.getElementById('billCategory').value;
                const priority = document.getElementById('billPriority').value;
                const notes = document.getElementById('billNotes').value.trim();
                const isRecurring = document.getElementById('recurringToggle').classList.contains('active');

                // Validation
                if (!name || name.length < 2) {
                    Toast.error('Please enter a valid bill name');
                    return;
                }
                if (isNaN(amount) || amount <= 0) {
                    Toast.error('Please enter a valid amount');
                    return;
                }
                if (!dueDate) {
                    Toast.error('Please select a due date');
                    return;
                }

                const billId = Utils.generateId();

                if (isRecurring) {
                    const frequency = document.getElementById('frequency').value;
                    const dayOfMonth = parseInt(document.getElementById('dayOfMonth').value) || new Date(dueDate).getDate();

                    const recurringBill = {
                        id: Utils.generateId(),
                        name,
                        amount,
                        category,
                        priority,
                        notes,
                        tags: [...this.tags],
                        frequency,
                        dayOfMonth: Math.min(Math.max(dayOfMonth, 1), 31),
                        startDate: dueDate,
                        active: true,
                        createdAt: new Date().toISOString()
                    };

                    this.recurringBills.push(recurringBill);

                    // Create first instance
                    const firstBill = {
                        id: billId,
                        name,
                        amount,
                        dueDate,
                        category,
                        priority,
                        notes,
                        tags: [...this.tags],
                        paid: false,
                        paidAmount: 0,
                        recurring: true,
                        recurringId: recurringBill.id,
                        createdAt: new Date().toISOString()
                    };

                    this.bills.push(firstBill);
                    Toast.success(`Recurring bill "${name}" added!`);
                } else {
                    const bill = {
                        id: billId,
                        name,
                        amount,
                        dueDate,
                        category,
                        priority,
                        notes,
                        tags: [...this.tags],
                        paid: false,
                        paidAmount: 0,
                        recurring: false,
                        createdAt: new Date().toISOString()
                    };

                    this.bills.push(bill);
                    Toast.success(`Bill "${name}" added!`);
                }

                this.saveData();
                this.render();
                this.resetForm();
                this.switchTab('bills');
            },

            togglePaid(billId) {
                const bill = this.bills.find(b => b.id === billId);
                if (!bill) return;

                bill.paid = !bill.paid;
                bill.paidAt = bill.paid ? new Date().toISOString() : null;
                bill.paidAmount = bill.paid ? bill.amount : 0;

                if (bill.paid) {
                    this.updateStreak();
                }

                this.saveData();
                this.render();
                Toast.success(bill.paid ? `"${bill.name}" marked as paid` : `"${bill.name}" marked as unpaid`);
            },

            deleteBill(billId) {
                const bill = this.bills.find(b => b.id === billId);
                if (!bill) return;

                const billCopy = { ...bill };
                const index = this.bills.findIndex(b => b.id === billId);
                
                this.bills.splice(index, 1);
                this.saveData();
                this.render();

                UndoSystem.push({
                    message: `"${bill.name}" deleted`,
                    undo: () => {
                        this.bills.splice(index, 0, billCopy);
                        this.saveData();
                        this.render();
                    }
                });
            },

            openEditModal(billId) {
                const bill = this.bills.find(b => b.id === billId);
                if (!bill) return;

                document.getElementById('editBillId').value = billId;
                document.getElementById('editBillName').value = bill.name;
                document.getElementById('editBillAmount').value = bill.amount;
                document.getElementById('editBillDueDate').value = bill.dueDate;
                document.getElementById('editBillCategory').value = bill.category || '';
                document.getElementById('editBillNotes').value = bill.notes || '';

                this.openModal('editModal');
            },

            saveEdit() {
                const billId = document.getElementById('editBillId').value;
                const bill = this.bills.find(b => b.id === billId);
                if (!bill) return;

                bill.name = document.getElementById('editBillName').value.trim();
                bill.amount = parseFloat(document.getElementById('editBillAmount').value);
                bill.dueDate = document.getElementById('editBillDueDate').value;
                bill.category = document.getElementById('editBillCategory').value;
                bill.notes = document.getElementById('editBillNotes').value.trim();
                bill.updatedAt = new Date().toISOString();

                this.saveData();
                this.render();
                this.closeModal('editModal');
                Toast.success(`"${bill.name}" updated`);
            },

            openPaymentModal(billId) {
                const bill = this.bills.find(b => b.id === billId);
                if (!bill) return;

                const remaining = bill.amount - (bill.paidAmount || 0);

                document.getElementById('paymentBillId').value = billId;
                document.getElementById('paymentBillName').textContent = bill.name;
                document.getElementById('paymentAmountDue').textContent = Utils.formatCurrency(remaining);
                document.getElementById('paymentAmount').value = '';
                document.getElementById('paymentAmount').max = remaining;

                this.openModal('paymentModal');
            },

            setPaymentAmount(percentage) {
                const billId = document.getElementById('paymentBillId').value;
                const bill = this.bills.find(b => b.id === billId);
                if (!bill) return;

                const remaining = bill.amount - (bill.paidAmount || 0);
                document.getElementById('paymentAmount').value = (remaining * percentage).toFixed(2);
            },

            confirmPayment() {
                const billId = document.getElementById('paymentBillId').value;
                const bill = this.bills.find(b => b.id === billId);
                if (!bill) return;

                const paymentAmount = parseFloat(document.getElementById('paymentAmount').value);
                const remaining = bill.amount - (bill.paidAmount || 0);

                if (isNaN(paymentAmount) || paymentAmount <= 0) {
                    Toast.error('Please enter a valid payment amount');
                    return;
                }

                if (paymentAmount > remaining) {
                    Toast.error('Payment amount exceeds remaining balance');
                    return;
                }

                bill.paidAmount = (bill.paidAmount || 0) + paymentAmount;
                
                if (bill.paidAmount >= bill.amount) {
                    bill.paid = true;
                    bill.paidAt = new Date().toISOString();
                    this.updateStreak();
                }

                this.saveData();
                this.render();
                this.closeModal('paymentModal');
                Toast.success(`Payment of ${Utils.formatCurrency(paymentAmount)} recorded`);
            },

            markAllPaid() {
                const unpaid = this.bills.filter(b => !b.paid);
                if (unpaid.length === 0) {
                    Toast.info('All bills are already paid!');
                    return;
                }

                if (confirm(`Mark ${unpaid.length} bills as paid?`)) {
                    unpaid.forEach(bill => {
                        bill.paid = true;
                        bill.paidAmount = bill.amount;
                        bill.paidAt = new Date().toISOString();
                    });
                    this.updateStreak();
                    this.saveData();
                    this.render();
                    Toast.success(`${unpaid.length} bills marked as paid`);
                }
            },

            // ----------------------------------------
            // RECURRING BILLS
            // ----------------------------------------
            generateRecurringBills() {
                const today = new Date();
                const currentMonth = today.getMonth();
                const currentYear = today.getFullYear();

                this.recurringBills.forEach(rb => {
                    if (!rb.active) return;

                    const exists = this.bills.some(b =>
                        b.recurringId === rb.id &&
                        new Date(b.dueDate).getMonth() === currentMonth &&
                        new Date(b.dueDate).getFullYear() === currentYear
                    );

                    if (!exists && rb.frequency === 'monthly') {
                        const lastDay = Utils.getDaysInMonth(currentYear, currentMonth);
                        const dueDay = Math.min(rb.dayOfMonth, lastDay);
                        const dueDate = new Date(currentYear, currentMonth, dueDay);

                        if (dueDate >= today) {
                            const bill = {
                                id: Utils.generateId(),
                                name: rb.name,
                                amount: rb.amount,
                                dueDate: dueDate.toISOString().split('T')[0],
                                category: rb.category,
                                priority: rb.priority,
                                notes: rb.notes,
                                tags: rb.tags || [],
                                paid: false,
                                paidAmount: 0,
                                recurring: true,
                                recurringId: rb.id,
                                createdAt: new Date().toISOString()
                            };
                            this.bills.push(bill);
                        }
                    }
                });

                this.saveData();
            },

            toggleRecurringBill(id) {
                const rb = this.recurringBills.find(b => b.id === id);
                if (rb) {
                    rb.active = !rb.active;
                    this.saveData();
                    this.renderRecurringBills();
                    Toast.success(`"${rb.name}" ${rb.active ? 'activated' : 'paused'}`);
                }
            },

            deleteRecurringBill(id) {
                const rb = this.recurringBills.find(b => b.id === id);
                if (!rb) return;

                if (confirm(`Delete "${rb.name}" recurring bill?`)) {
                    this.recurringBills = this.recurringBills.filter(b => b.id !== id);
                    this.saveData();
                    this.renderRecurringBills();
                    Toast.success(`"${rb.name}" deleted`);
                }
            },

            // ----------------------------------------
            // TEMPLATES
            // ----------------------------------------
            applyTemplate(templateName) {
                const template = CONFIG.TEMPLATES[templateName];
                if (!template) return;

                document.getElementById('billName').value = template.name;
                document.getElementById('billCategory').value = template.category;
                document.getElementById('billAmount').focus();

                Toast.info(`Template "${template.name}" applied`);
            },

            resetForm() {
                document.getElementById('billForm').reset();
                document.getElementById('recurringToggle').classList.remove('active');
                document.getElementById('recurringOptions').classList.remove('show');
                document.getElementById('reminderToggle').classList.remove('active');
                document.getElementById('reminderOptions').classList.remove('show');
                this.tags = [];
                this.renderTags();
            },

            // ----------------------------------------
            // STREAK SYSTEM
            // ----------------------------------------
            updateStreak() {
                const today = new Date().toDateString();
                
                if (this.streak.lastPayment === today) {
                    return; // Already updated today
                }

                const yesterday = new Date();
                yesterday.setDate(yesterday.getDate() - 1);

                if (this.streak.lastPayment === yesterday.toDateString()) {
                    this.streak.current++;
                } else {
                    this.streak.current = 1;
                }

                if (this.streak.current > this.streak.best) {
                    this.streak.best = this.streak.current;
                }

                this.streak.lastPayment = today;
                this.saveStreak();
                this.updateStreakDisplay();
            },

            updateStreakDisplay() {
                const badge = document.getElementById('streakBadge');
                const count = document.getElementById('streakCount');
                
                if (count) count.textContent = this.streak.current;
                if (badge) badge.style.display = this.streak.current > 0 ? 'flex' : 'none';
            },

            // ----------------------------------------
            // REMINDERS & NOTIFICATIONS
            // ----------------------------------------
            requestNotificationPermission() {
                if ('Notification' in window && Notification.permission === 'default') {
                    Notification.requestPermission();
                }
            },

            checkReminders() {
                const dueSoon = this.bills.filter(b => 
                    !b.paid && (Utils.isOverdue(b.dueDate) || Utils.isDueSoon(b.dueDate, this.settings.reminderDays))
                );

                if (dueSoon.length > 0) {
                    setTimeout(() => {
                        Toast.warning(`${dueSoon.length} bill(s) need your attention!`);
                        this.sendNotification(dueSoon.length);
                    }, 1500);
                }
            },

            sendNotification(count) {
                if ('Notification' in window && Notification.permission === 'granted' && this.settings.browserNotifications) {
                    new Notification('Bills Tracker Pro', {
                        body: `You have ${count} bill(s) that need attention!`,
                        tag: 'bills-reminder'
                    });
                }
            },

            showReminders() {
                const unpaid = this.bills.filter(b => !b.paid);
                
                if (unpaid.length === 0) {
                    Toast.success('üéâ All bills are paid!');
                    return;
                }

                let message = `You have ${unpaid.length} unpaid bill(s):\n`;
                unpaid.slice(0, 5).forEach(b => {
                    const status = Utils.isOverdue(b.dueDate) ? '‚ö†Ô∏è OVERDUE' : '';
                    message += `\n‚Ä¢ ${b.name}: ${Utils.formatCurrency(b.amount)} ${status}`;
                });

                if (unpaid.length > 5) {
                    message += `\n...and ${unpaid.length - 5} more`;
                }

                Toast.warning(message);
            },

            // ----------------------------------------
            // THEME
            // ----------------------------------------
            toggleTheme() {
                const html = document.documentElement;
                const isDark = html.getAttribute('data-theme') === 'dark';

                if (isDark) {
                    html.removeAttribute('data-theme');
                    document.getElementById('themeBtn').textContent = 'üåô';
                    document.getElementById('darkModeToggle').classList.remove('active');
                    localStorage.setItem(CONFIG.STORAGE_KEYS.THEME, 'light');
                } else {
                    html.setAttribute('data-theme', 'dark');
                    document.getElementById('themeBtn').textContent = '‚òÄÔ∏è';
                    document.getElementById('darkModeToggle').classList.add('active');
                    localStorage.setItem(CONFIG.STORAGE_KEYS.THEME, 'dark');
                }
            },

            // ----------------------------------------
            // DATA IMPORT/EXPORT
            // ----------------------------------------
            exportData() {
                const data = {
                    version: '2.0',
                    exportedAt: new Date().toISOString(),
                    bills: this.bills,
                    recurringBills: this.recurringBills,
                    settings: this.settings,
                    streak: this.streak
                };

                const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `bills-tracker-${new Date().toISOString().split('T')[0]}.json`;
                a.click();
                URL.revokeObjectURL(url);

                Toast.success('Data exported!');
            },

            importData(e) {
                const file = e.target.files[0];
                if (!file) return;

                const reader = new FileReader();
                reader.onload = (event) => {
                    try {
                        const data = JSON.parse(event.target.result);

                        if (!data.bills || !Array.isArray(data.bills)) {
                            throw new Error('Invalid format');
                        }

                        if (confirm(`Import ${data.bills.length} bills?`)) {
                            this.bills = data.bills;
                            this.recurringBills = data.recurringBills || [];
                                                        if (data.settings) this.settings = { ...this.settings, ...data.settings };
                            if (data.streak) this.streak = data.streak;
                            
                            this.saveData();
                            this.saveSettings();
                            this.saveStreak();
                            this.applySettingsToUI();
                            this.render();
                            
                            Toast.success('Data imported successfully!');
                        }
                    } catch (err) {
                        console.error('Import error:', err);
                        Toast.error('Failed to import data. Invalid file format.');
                    }
                };
                reader.readAsText(file);
                e.target.value = '';
            },

            clearAllData() {
                if (confirm('‚ö†Ô∏è Delete ALL data? This cannot be undone!')) {
                    if (confirm('Are you absolutely sure? All bills will be permanently deleted.')) {
                        this.bills = [];
                        this.recurringBills = [];
                        this.streak = { current: 0, best: 0, lastPayment: null };
                        
                        localStorage.removeItem(CONFIG.STORAGE_KEYS.BILLS);
                        localStorage.removeItem(CONFIG.STORAGE_KEYS.RECURRING);
                        localStorage.removeItem(CONFIG.STORAGE_KEYS.STREAK);
                        
                        this.render();
                        Toast.success('All data cleared');
                    }
                }
            },

            // ----------------------------------------
            // MODAL MANAGEMENT
            // ----------------------------------------
            openModal(modalId) {
                const modal = document.getElementById(modalId);
                if (modal) {
                    modal.classList.add('show');
                    document.body.style.overflow = 'hidden';
                }
            },

            closeModal(modalId) {
                const modal = document.getElementById(modalId);
                if (modal) {
                    modal.classList.remove('show');
                    document.body.style.overflow = '';
                }
            },

            // ----------------------------------------
            // KEYBOARD SHORTCUTS
            // ----------------------------------------
            handleKeyboardShortcuts(e) {
                // Don't trigger if typing in input
                if (e.target.matches('input, textarea, select')) return;

                const key = e.key.toLowerCase();

                switch (key) {
                    case 'n':
                        e.preventDefault();
                        this.switchTab('add');
                        document.getElementById('billName')?.focus();
                        break;
                    case '/':
                        e.preventDefault();
                        this.switchTab('bills');
                        document.getElementById('searchInput')?.focus();
                        break;
                    case '1':
                        e.preventDefault();
                        this.switchTab('bills');
                        break;
                    case '2':
                        e.preventDefault();
                        this.switchTab('calendar');
                        break;
                    case '3':
                        e.preventDefault();
                        this.switchTab('analytics');
                        break;
                    case 'd':
                        e.preventDefault();
                        this.toggleTheme();
                        break;
                    case '?':
                        e.preventDefault();
                        this.openModal('shortcutsModal');
                        break;
                    case 'escape':
                        document.querySelectorAll('.modal-backdrop.show').forEach(m => {
                            this.closeModal(m.id);
                        });
                        break;
                }
            },

            // ----------------------------------------
            // CALENDAR
            // ----------------------------------------
            navigateCalendar(direction) {
                this.currentCalendarDate.setMonth(this.currentCalendarDate.getMonth() + direction);
                this.renderCalendar();
            },

            renderCalendar() {
                const grid = document.getElementById('calendarGrid');
                const title = document.getElementById('calendarTitle');
                if (!grid || !title) return;

                const year = this.currentCalendarDate.getFullYear();
                const month = this.currentCalendarDate.getMonth();

                title.textContent = `${Utils.getMonthName(month)} ${year}`;

                // Clear grid
                grid.innerHTML = '';

                // Add weekday headers
                const weekdays = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
                weekdays.forEach(day => {
                    const dayEl = document.createElement('div');
                    dayEl.className = 'calendar-weekday';
                    dayEl.textContent = day;
                    grid.appendChild(dayEl);
                });

                // Get first day of month and total days
                const firstDay = new Date(year, month, 1).getDay();
                const daysInMonth = Utils.getDaysInMonth(year, month);
                const daysInPrevMonth = Utils.getDaysInMonth(year, month - 1);

                // Get today
                const today = new Date();
                const isCurrentMonth = today.getFullYear() === year && today.getMonth() === month;

                // Previous month days
                for (let i = firstDay - 1; i >= 0; i--) {
                    const dayEl = document.createElement('div');
                    dayEl.className = 'calendar-day other-month';
                    dayEl.innerHTML = `<span class="calendar-day-number">${daysInPrevMonth - i}</span>`;
                    grid.appendChild(dayEl);
                }

                // Current month days
                for (let day = 1; day <= daysInMonth; day++) {
                    const dateStr = `${year}-${String(month + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
                    const billsOnDay = this.bills.filter(b => b.dueDate === dateStr);
                    const hasOverdue = billsOnDay.some(b => !b.paid && Utils.isOverdue(dateStr));
                    const hasUnpaid = billsOnDay.some(b => !b.paid);

                    const dayEl = document.createElement('div');
                    dayEl.className = 'calendar-day';
                    
                    if (isCurrentMonth && day === today.getDate()) {
                        dayEl.classList.add('today');
                    }
                    if (hasOverdue) {
                        dayEl.classList.add('has-overdue');
                    } else if (hasUnpaid) {
                        dayEl.classList.add('has-bills');
                    }

                    let billDotsHtml = '';
                    if (billsOnDay.length > 0) {
                        billDotsHtml = '<div class="calendar-day-bills">';
                        billsOnDay.slice(0, 3).forEach(bill => {
                            let dotClass = 'paid';
                            if (!bill.paid) {
                                dotClass = Utils.isOverdue(bill.dueDate) ? 'overdue' : 'unpaid';
                            }
                            billDotsHtml += `<div class="calendar-bill-dot ${dotClass}"></div>`;
                        });
                        if (billsOnDay.length > 3) {
                            billDotsHtml += `<div style="font-size: 0.6rem; color: var(--text-muted);">+${billsOnDay.length - 3}</div>`;
                        }
                        billDotsHtml += '</div>';
                    }

                    dayEl.innerHTML = `
                        <span class="calendar-day-number">${day}</span>
                        ${billDotsHtml}
                    `;

                    if (billsOnDay.length > 0) {
                        dayEl.addEventListener('click', () => this.showDayBills(dateStr, billsOnDay));
                    }

                    grid.appendChild(dayEl);
                }

                // Next month days to fill grid
                const totalCells = firstDay + daysInMonth;
                const remainingCells = totalCells % 7 === 0 ? 0 : 7 - (totalCells % 7);
                
                for (let i = 1; i <= remainingCells; i++) {
                    const dayEl = document.createElement('div');
                    dayEl.className = 'calendar-day other-month';
                    dayEl.innerHTML = `<span class="calendar-day-number">${i}</span>`;
                    grid.appendChild(dayEl);
                }
            },

            showDayBills(dateStr, bills) {
                const title = document.getElementById('dayBillsTitle');
                const list = document.getElementById('dayBillsList');
                
                if (!title || !list) return;

                title.textContent = `üìÖ Bills for ${Utils.formatDate(dateStr)}`;
                
                list.innerHTML = bills.map(bill => `
                    <div class="bill-card ${bill.paid ? 'paid' : ''} ${!bill.paid && Utils.isOverdue(bill.dueDate) ? 'overdue' : ''}" style="margin-bottom: 12px;">
                        <div class="bill-checkbox ${bill.paid ? 'checked' : ''}" onclick="App.togglePaid('${bill.id}'); App.closeModal('dayBillsModal');">
                            ${bill.paid ? '‚úì' : ''}
                        </div>
                        <div class="bill-content">
                            <div class="bill-header">
                                <span class="bill-name">${Utils.sanitize(bill.name)}</span>
                            </div>
                        </div>
                        <div class="bill-amount">${Utils.formatCurrency(bill.amount)}</div>
                    </div>
                `).join('');

                this.openModal('dayBillsModal');
            },

            // ----------------------------------------
            // ANALYTICS
            // ----------------------------------------
            renderAnalytics() {
                this.renderBudgetOverview();
                this.renderCategoryChart();
                this.renderMonthlyChart();
                this.renderPerformanceStats();
            },

            renderBudgetOverview() {
                const budget = this.settings.monthlyBudget || 0;
                const today = new Date();
                const currentMonth = today.getMonth();
                const currentYear = today.getFullYear();

                // Calculate spending this month
                const monthlyBills = this.bills.filter(b => {
                    const billDate = new Date(b.dueDate);
                    return billDate.getMonth() === currentMonth && billDate.getFullYear() === currentYear;
                });

                const spent = monthlyBills.reduce((sum, b) => sum + (b.paidAmount || (b.paid ? b.amount : 0)), 0);
                const totalDue = monthlyBills.reduce((sum, b) => sum + b.amount, 0);

                const remaining = budget - spent;
                const percent = budget > 0 ? Math.min((spent / budget) * 100, 100) : 0;

                // Days left in month
                const daysInMonth = Utils.getDaysInMonth(currentYear, currentMonth);
                const daysLeft = daysInMonth - today.getDate();

                // Update UI
                document.getElementById('budgetSpent').textContent = Utils.formatCurrency(spent);
                document.getElementById('budgetTotal').textContent = Utils.formatCurrency(budget || totalDue);
                document.getElementById('budgetRemaining').textContent = budget > 0 ? 
                    `${Utils.formatCurrency(remaining)} left` : 
                    `${Utils.formatCurrency(totalDue - spent)} unpaid`;
                document.getElementById('budgetPercent').textContent = percent.toFixed(0);
                document.getElementById('budgetDaysLeft').textContent = `${daysLeft} days left this month`;

                const progressBar = document.getElementById('budgetProgressBar');
                if (progressBar) {
                    progressBar.style.width = `${percent}%`;
                    progressBar.classList.remove('warning', 'danger');
                    if (percent > 90) {
                        progressBar.classList.add('danger');
                    } else if (percent > 70) {
                        progressBar.classList.add('warning');
                    }
                }
            },

            renderCategoryChart() {
                const categoryTotals = {};
                let total = 0;

                this.bills.forEach(bill => {
                    const cat = bill.category || 'other';
                    categoryTotals[cat] = (categoryTotals[cat] || 0) + bill.amount;
                    total += bill.amount;
                });

                // Update total
                document.getElementById('totalSpending').textContent = Utils.formatCurrency(total);

                // Render legend
                const legend = document.getElementById('categoryLegend');
                if (!legend) return;

                const sortedCategories = Object.entries(categoryTotals)
                    .sort((a, b) => b[1] - a[1])
                    .slice(0, 6);

                legend.innerHTML = sortedCategories.map(([cat, amount]) => {
                    const catInfo = CONFIG.CATEGORIES[cat] || CONFIG.CATEGORIES.other;
                    const percent = total > 0 ? ((amount / total) * 100).toFixed(1) : 0;
                    
                    return `
                        <div class="donut-legend-item">
                            <div class="donut-legend-color" style="background: ${catInfo.color}"></div>
                            <div class="donut-legend-info">
                                <div class="donut-legend-name">${catInfo.icon} ${catInfo.name}</div>
                                <div class="donut-legend-value">${Utils.formatCurrency(amount)} (${percent}%)</div>
                            </div>
                        </div>
                    `;
                }).join('');

                // Render SVG donut chart
                const chart = document.getElementById('categoryChart');
                if (!chart) return;

                const svg = chart.querySelector('svg');
                if (!svg) return;

                // Clear existing segments
                svg.innerHTML = '<circle cx="50" cy="50" r="40" fill="none" stroke="var(--bg-tertiary)" stroke-width="20"/>';

                if (total === 0) return;

                let currentAngle = 0;
                const radius = 40;
                const circumference = 2 * Math.PI * radius;

                sortedCategories.forEach(([cat, amount]) => {
                    const catInfo = CONFIG.CATEGORIES[cat] || CONFIG.CATEGORIES.other;
                    const percent = amount / total;
                    const segmentLength = circumference * percent;
                    const gapLength = circumference - segmentLength;

                    const circle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
                    circle.setAttribute('cx', '50');
                    circle.setAttribute('cy', '50');
                    circle.setAttribute('r', radius.toString());
                    circle.setAttribute('fill', 'none');
                    circle.setAttribute('stroke', catInfo.color);
                    circle.setAttribute('stroke-width', '20');
                    circle.setAttribute('stroke-dasharray', `${segmentLength} ${gapLength}`);
                    circle.setAttribute('stroke-dashoffset', (-currentAngle * circumference / 360).toString());
                    circle.style.transition = 'stroke-dasharray 0.5s ease';

                    svg.appendChild(circle);
                    currentAngle += percent * 360;
                });
            },

            renderMonthlyChart() {
                const chart = document.getElementById('monthlyChart');
                if (!chart) return;

                // Get last 6 months of data
                const monthlyData = [];
                const today = new Date();

                for (let i = 5; i >= 0; i--) {
                    const date = new Date(today.getFullYear(), today.getMonth() - i, 1);
                    const month = date.getMonth();
                    const year = date.getFullYear();
                    
                    const monthBills = this.bills.filter(b => {
                        const billDate = new Date(b.dueDate);
                        return billDate.getMonth() === month && billDate.getFullYear() === year;
                    });

                    const total = monthBills.reduce((sum, b) => sum + b.amount, 0);
                    
                    monthlyData.push({
                        month: Utils.getMonthName(month).slice(0, 3),
                        total
                    });
                }

                const maxValue = Math.max(...monthlyData.map(d => d.total), 1);

                chart.innerHTML = monthlyData.map(data => {
                    const height = (data.total / maxValue) * 150;
                    return `
                        <div class="bar-group">
                            <div class="bar" style="height: ${Math.max(height, 4)}px;">
                                <span class="bar-value">${Utils.formatCurrency(data.total)}</span>
                            </div>
                            <span class="bar-label">${data.month}</span>
                        </div>
                    `;
                }).join('');
            },

            renderPerformanceStats() {
                // On-time rate
                const paidBills = this.bills.filter(b => b.paid && b.paidAt);
                let onTime = 0;
                
                paidBills.forEach(bill => {
                    const dueDate = new Date(bill.dueDate);
                    const paidDate = new Date(bill.paidAt);
                    if (paidDate <= dueDate) onTime++;
                });

                const onTimeRate = paidBills.length > 0 ? ((onTime / paidBills.length) * 100).toFixed(0) : 0;
                document.getElementById('onTimeRate').textContent = `${onTimeRate}%`;

                // Average monthly
                const today = new Date();
                const monthlyTotals = {};
                
                this.bills.forEach(bill => {
                    const date = new Date(bill.dueDate);
                    const key = `${date.getFullYear()}-${date.getMonth()}`;
                    monthlyTotals[key] = (monthlyTotals[key] || 0) + bill.amount;
                });

                const months = Object.values(monthlyTotals);
                const avgMonthly = months.length > 0 ? months.reduce((a, b) => a + b, 0) / months.length : 0;
                document.getElementById('avgMonthly').textContent = Utils.formatCurrency(avgMonthly);

                // Best streak
                document.getElementById('bestStreak').textContent = this.streak.best;

                // Year total
                const currentYear = today.getFullYear();
                const yearTotal = this.bills
                    .filter(b => new Date(b.dueDate).getFullYear() === currentYear)
                    .reduce((sum, b) => sum + b.amount, 0);
                document.getElementById('yearTotal').textContent = Utils.formatCurrency(yearTotal);
            },

            // ----------------------------------------
            // RENDERING
            // ----------------------------------------
            render() {
                this.renderBills();
                this.renderRecurringBills();
                this.updateStats();
                this.updateUnpaidBadge();
            },

            getFilteredAndSortedBills() {
                let filtered = [...this.bills];

                // Search
                if (this.searchQuery) {
                    filtered = filtered.filter(bill =>
                        bill.name.toLowerCase().includes(this.searchQuery) ||
                        (bill.category && bill.category.toLowerCase().includes(this.searchQuery)) ||
                        (bill.notes && bill.notes.toLowerCase().includes(this.searchQuery)) ||
                        (bill.tags && bill.tags.some(t => t.toLowerCase().includes(this.searchQuery)))
                    );
                }

                // Filter
                switch (this.currentFilter) {
                    case 'paid':
                        filtered = filtered.filter(b => b.paid);
                        break;
                    case 'unpaid':
                        filtered = filtered.filter(b => !b.paid);
                        break;
                    case 'overdue':
                        filtered = filtered.filter(b => !b.paid && Utils.isOverdue(b.dueDate));
                        break;
                }

                // Sort
                const [field, dir] = this.currentSort.split('-');
                filtered.sort((a, b) => {
                    let valA, valB;
                    
                    switch (field) {
                        case 'dueDate':
                            valA = new Date(a.dueDate);
                            valB = new Date(b.dueDate);
                            break;
                        case 'amount':
                            valA = a.amount;
                            valB = b.amount;
                            break;
                        case 'name':
                            valA = a.name.toLowerCase();
                            valB = b.name.toLowerCase();
                            break;
                        default:
                            valA = new Date(a.dueDate);
                            valB = new Date(b.dueDate);
                    }

                    return dir === 'asc' ? (valA > valB ? 1 : -1) : (valA < valB ? 1 : -1);
                });

                return filtered;
            },

            renderBills() {
                const container = document.getElementById('billsList');
                if (!container) return;

                const bills = this.getFilteredAndSortedBills();

                if (bills.length === 0) {
                    const message = this.searchQuery || this.currentFilter !== 'all'
                        ? 'No bills match your criteria.'
                        : 'No bills yet. Add your first bill to get started!';

                    container.innerHTML = `
                        <div class="empty-state">
                            <div class="empty-state-icon">üì≠</div>
                            <h3>No Bills Found</h3>
                            <p>${message}</p>
                            <button class="btn btn-primary" onclick="App.switchTab('add')">
                                <span>‚ûï</span> Add Bill
                            </button>
                        </div>
                    `;
                    return;
                }

                container.innerHTML = bills.map(bill => {
                    const overdue = !bill.paid && Utils.isOverdue(bill.dueDate);
                    const dueSoon = !bill.paid && !overdue && Utils.isDueSoon(bill.dueDate, this.settings.reminderDays);
                    const catInfo = bill.category ? CONFIG.CATEGORIES[bill.category] : null;
                    
                    let statusClass = '';
                    if (bill.paid) statusClass = 'paid';
                    else if (overdue) statusClass = 'overdue';
                    else if (dueSoon) statusClass = 'due-soon';

                    // Calculate payment progress
                    const paidPercent = bill.amount > 0 ? ((bill.paidAmount || 0) / bill.amount) * 100 : 0;
                    const hasPartialPayment = bill.paidAmount > 0 && bill.paidAmount < bill.amount;

                    // Tags HTML
                    const tagsHtml = bill.tags && bill.tags.length > 0 
                        ? bill.tags.map(t => `<span class="badge badge-tag">${Utils.sanitize(t)}</span>`).join('')
                        : '';

                    return `
                        <div class="bill-card ${statusClass}" data-id="${bill.id}">
                            <div class="bill-checkbox ${bill.paid ? 'checked' : ''}" onclick="App.togglePaid('${bill.id}')">
                                ${bill.paid ? '‚úì' : ''}
                            </div>
                            <div class="bill-content">
                                <div class="bill-header">
                                    <span class="bill-name">${Utils.sanitize(bill.name)}</span>
                                    <div class="bill-badges">
                                        ${bill.recurring ? '<span class="badge badge-recurring">üîÑ Recurring</span>' : ''}
                                        ${overdue ? '<span class="badge badge-overdue">Overdue</span>' : ''}
                                        ${dueSoon ? '<span class="badge badge-due-soon">Due Soon</span>' : ''}
                                        ${catInfo ? `<span class="badge badge-category">${catInfo.icon} ${catInfo.name}</span>` : ''}
                                        ${tagsHtml}
                                    </div>
                                </div>
                                <div class="bill-meta">
                                    <span class="bill-meta-item">üìÖ ${Utils.formatDate(bill.dueDate)}</span>
                                    ${bill.notes ? `<span class="bill-meta-item">üìù ${Utils.sanitize(bill.notes.substring(0, 30))}${bill.notes.length > 30 ? '...' : ''}</span>` : ''}
                                </div>
                            </div>
                            <div class="bill-amount-wrapper">
                                <div class="bill-amount">${Utils.formatCurrency(bill.amount)}</div>
                                ${hasPartialPayment ? `
                                    <div class="bill-amount-paid">${Utils.formatCurrency(bill.paidAmount)} paid</div>
                                    <div class="bill-progress">
                                        <div class="bill-progress-bar" style="width: ${paidPercent}%"></div>
                                    </div>
                                ` : ''}
                            </div>
                            <div class="bill-actions">
                                ${!bill.paid ? `
                                    <button class="bill-action-btn payment" onclick="App.openPaymentModal('${bill.id}')" title="Make payment">
                                        üí≥
                                    </button>
                                ` : ''}
                                <button class="bill-action-btn edit" onclick="App.openEditModal('${bill.id}')" title="Edit">
                                    ‚úèÔ∏è
                                </button>
                                <button class="bill-action-btn delete" onclick="App.deleteBill('${bill.id}')" title="Delete">
                                    üóëÔ∏è
                                </button>
                            </div>
                        </div>
                    `;
                }).join('');
            },

            renderRecurringBills() {
                const container = document.getElementById('recurringList');
                if (!container) return;

                if (this.recurringBills.length === 0) {
                    container.innerHTML = `
                        <div class="empty-state">
                            <div class="empty-state-icon">üîÑ</div>
                            <h3>No Recurring Bills</h3>
                            <p>Set up recurring bills to automatically track them each month.</p>
                            <button class="btn btn-primary" onclick="App.switchTab('add'); document.getElementById('recurringToggle').click();">
                                <span>‚ûï</span> Add Recurring Bill
                            </button>
                        </div>
                    `;
                    return;
                }

                container.innerHTML = this.recurringBills.map(rb => {
                    const freqInfo = CONFIG.FREQUENCIES[rb.frequency];
                    const catInfo = rb.category ? CONFIG.CATEGORIES[rb.category] : null;
                    let scheduleText = freqInfo ? freqInfo.label : rb.frequency;
                    
                    if (rb.frequency === 'monthly') {
                        scheduleText += ` on day ${rb.dayOfMonth}`;
                    }

                    return `
                        <div class="bill-card ${rb.active ? '' : 'paid'}" style="opacity: ${rb.active ? 1 : 0.6};">
                            <div class="bill-content">
                                <div class="bill-header">
                                    <span class="bill-name">
                                        ${Utils.sanitize(rb.name)}
                                        ${!rb.active ? '<span style="color: var(--text-muted);"> (Paused)</span>' : ''}
                                    </span>
                                    <div class="bill-badges">
                                        ${catInfo ? `<span class="badge badge-category">${catInfo.icon} ${catInfo.name}</span>` : ''}
                                    </div>
                                </div>
                                <div class="bill-meta">
                                    <span class="bill-meta-item">üìÖ ${scheduleText}</span>
                                    <span class="bill-meta-item">üíµ ${Utils.formatCurrency(rb.amount)}</span>
                                </div>
                            </div>
                            <div class="bill-actions">
                                <button class="btn ${rb.active ? 'btn-secondary' : 'btn-success'}" 
                                        onclick="App.toggleRecurringBill('${rb.id}')"
                                        style="padding: 8px 16px; font-size: 0.85rem;">
                                    ${rb.active ? '‚è∏ Pause' : '‚ñ∂Ô∏è Resume'}
                                </button>
                                <button class="bill-action-btn delete" onclick="App.deleteRecurringBill('${rb.id}')" title="Delete">
                                    üóëÔ∏è
                                </button>
                            </div>
                        </div>
                    `;
                }).join('');
            },

            updateStats() {
                const total = this.bills.length;
                const paid = this.bills.filter(b => b.paid).length;
                const pending = total - paid;
                const overdue = this.bills.filter(b => !b.paid && Utils.isOverdue(b.dueDate)).length;
                const totalDue = this.bills.filter(b => !b.paid).reduce((sum, b) => sum + b.amount - (b.paidAmount || 0), 0);

                document.getElementById('statTotal').textContent = total;
                document.getElementById('statPaid').textContent = paid;
                document.getElementById('statPending').textContent = pending;
                document.getElementById('statOverdue').textContent = overdue;
                document.getElementById('statAmount').textContent = Utils.formatCurrency(totalDue);
            },

            updateUnpaidBadge() {
                const unpaid = this.bills.filter(b => !b.paid).length;
                const badge = document.getElementById('unpaidBadge');
                
                if (badge) {
                    badge.textContent = unpaid;
                    badge.style.display = unpaid > 0 ? 'inline' : 'none';
                }
            }
        };

        // ============================================
        // INITIALIZE APP
        // ============================================
        document.addEventListener('DOMContentLoaded', () => {
            App.init();
        });

        // Service Worker Registration for PWA (optional)
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                // Uncomment below if you have a service worker file
                // navigator.serviceWorker.register('/sw.js');
            });
        }
    </script>
</body>
</html>
                                
